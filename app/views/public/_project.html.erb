
<div class="project">
    
    <div class="project__detail">
    <div class="project__type"><%=project.category%></div>
    <div class="project__title">
    <a href="/projects/<%=project.id%>%"><%=project.title%></a>
    </div>
    <div class="project__description"><%=project.description%></div>
    <div class="project__moreInfo">
        <a href="/projects/<%=project.id%>%">More Information</a>
        <img/>
    </div>
    </div>
    <a href="/projects/<%=project.id%>%">
        <% if(project.image1.attached?)%>
            <%= image_tag project.image1,{class:'project__image'}%>
        <% else%>
            <%= image_tag 'image.png',{class:'project__image'}%>
    </a>
    <% end%>
    <a href="/projects/<%=project.id%>%">
        <% if(project.image2.attached?)%>
            <%= image_tag project.image2,{class:'project__image'}%>
        <% else%>
            <%= image_tag 'image.png',{class:'project__image'}%>
        <% end%>
    </a>
    <a href="/projects/<%=project.id%>%">
        <% if(project.image3.attached?)%>
            <%= image_tag project.image3,{class:'project__image'}%>
        <% else%>
            <%= image_tag 'image.png',{class:'project__image'}%>
        <% end%>   
    </a>

</div>  